<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RedSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#ecf45d62</item>
        <item name="android:progressTint">#e93740</item>
        <item name="android:colorControlActivated">#ff0008</item>
    </style>

    <style name="BlueSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#ec5d6cf4</item>
        <item name="android:progressTint">#3740e9</item>
        <item name="android:colorControlActivated">#0008ff</item>
    </style>

    <style name="GreenSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#ec71f45d</item>
        <item name="android:progressTint">#4fe937</item>
        <item name="android:colorControlActivated">#2fff00</item>
    </style>

</resources>
